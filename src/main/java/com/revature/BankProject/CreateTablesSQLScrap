 CREATE TABLE Users_Accounts(
	uID INT NOT NULL ,
	aID INT NOT NULL
);

 
 

CREATE TABLE Accounts(
	ID SERIAL NOT NULL PRIMARY KEY,
	Status char DEFAULT 'p',
	Balance varchar(255) DEFAULT '0.00'
);


