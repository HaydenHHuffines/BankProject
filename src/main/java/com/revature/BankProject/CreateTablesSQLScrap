CREATE TABLE Users (
    ID SERIAL NOT NULL PRIMARY KEY,
    Name varchar(255) NOT NULL DEFAULT 'default',
    Password varchar(255) NOT NULL ,
    Type char DEFAULT 'c',
    Status char DEFAULT 'p',
    Note varchar(255) DEFAULT 'other details?'
);

